<h1>CECI EST UN TEST</h1>

<div class="container">
    <div class="row">
        <form action="/" method="post">
            <div class="col-md-6">
                <input type="text" name="searchinput">
            </div>
            <button class="btn-primary" type="submit">BOUTON</button>
        </form>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th scope="col">Album Cover</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Artiste</th>
                        <th scope="col">Date</th>
                        <th scope="col">Lien</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dataLoop }}
                    <tr>
                        <td><img src="{{ album.images.0.url }}" width="100" height="100"></td>
                        <td>{{ name }}</td>
                        <td>{{ artists.0.name }}</td>
                        <td>{{ release_date }}</td>
                        <td><a href="{{ external_urls.spotify }}">{{ external_urls.spotify }}</a></td>
                    </tr>
                    {{/each }}
                </tbody>
            </table>
        </div>
    </div>
</div>